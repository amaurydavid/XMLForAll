{
  "name": "XMLForAll",
  "version": "0.1.0",
  "description": "Generates XML styleguide on all project types.",
  "author": {
    "name": "Amaury DAVID"
  },
  "repository": "https://github.com/amaurydavid/XMLForAll",
  "scripts": {
    "start": "zem start",
    "build": "zem build",
    "clean": "zem clean",
    "exec": "zem exec",
    "publish": "zem publish"
  },
  "zeplin": {
    "displayName": "XMLForAll",
    "projectTypes": [
      "android",
      "ios",
      "osx",
      "web"
    ],
    "options": [
      {
        "name": "Text style line height attribute",
        "type": "picker",
        "id": "lineHeightAttribute",
        "default": "lineHeight",
        "options": [
          {
            "name": "lineHeight",
            "value": "lineHeight"
          },
          {
            "name": "lineSpacingExtra",
            "value": "lineSpacingExtra"
          },
          {
            "name": "lineSpacingMultiplier",
            "value": "lineSpacingMultiplier"
          }
        ]
      }
    ]
  },
  "dependencies": {
    "snake-case": "^2.1.0",
    "zem": "^0.3.3"
  }
}
